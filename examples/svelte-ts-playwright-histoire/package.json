{
  "name": "svelte-ts-playwright-histoire",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "lint": "prettier . --check && eslint . --cache",
    "format": "prettier . --write && eslint . --cache --fix",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite --port 3000",
    "build": "tsc && vite build",
    "preview": "vite preview --port 3000",
    "playwright": "playwright test",
    "playwright:ct": "playwright test -c playwright-ct.config.ts",
    "playwright:report": "playwright show-report",
    "histoire": "histoire dev"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "svelte-fa": "^4.0.2"
  },
  "devDependencies": {
    "@histoire/plugin-svelte": "^0.17.17",
    "@playwright/experimental-ct-svelte": "^1.43.1",
    "@playwright/test": "^1.43.1",
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "@tsconfig/svelte": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-svelte": "^2.38.0",
    "histoire": "^0.17.17",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.3",
    "svelte": "^4.2.15",
    "svelte-check": "^3.7.0",
    "svelte-eslint-parser": "^0.33.1",
    "svelte-loader": "^3.2.0",
    "svelte-preprocess": "^5.1.4",
    "typescript": "^5.4.5",
    "vite": "^5.2.10"
  }
}
