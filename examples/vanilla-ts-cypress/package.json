{
  "name": "vanilla-ts-cypress",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "format": "prettier . --write && eslint . --cache --fix",
    "dev": "vite --port 3000",
    "build": "tsc && vite build",
    "preview": "vite preview --port 3000",
    "cypress": "start-server-and-test dev http://localhost:3000 cypress:open",
    "cypress:ci": "npm run build && start-server-and-test preview http://localhost:3000 cypress:run",
    "cypress:open": "cypress open --e2e --browser electron",
    "cypress:run": "cypress run --spec 'cypress/e2e/*.cy.ts'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "cypress": "^13.6.3",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.2",
    "start-server-and-test": "^2.0.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  }
}
