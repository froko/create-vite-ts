{
  "name": "react-ts-tailwind-playwright-ladle",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "format": "prettier . --write && eslint . --cache --fix",
    "dev": "vite --port 3000",
    "build": "tsc && vite build",
    "preview": "vite preview --port 3000",
    "playwright": "playwright test",
