{
  "name": "vue-ts-tailwind-playwright-histoire",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "lint": "prettier . --check && eslint . --cache",
    "format": "prettier . --write && eslint . --cache --fix",
    "dev": "vite --port 3000",
    "build": "vue-tsc && vite build",
    "preview": "vite preview --port 3000",
    "playwright": "playwright test",
    "playwright:ct": "playwright test -c playwright-ct.config.ts",
    "playwright:report": "playwright show-report",
    "histoire": "histoire dev"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "vue": "^3.4.35"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@histoire/plugin-vue": "^0.17.17",
    "@playwright/experimental-ct-vue": "^1.45.3",
    "@playwright/test": "^1.45.3",
    "@vitejs/plugin-vue": "^5.1.2",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "^9.27.0",
    "globals": "^15.9.0",
    "histoire": "^0.17.17",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.3.5",
    "vue-eslint-parser": "^9.4.3",
    "vue-loader": "^17.4.2",
    "vue-tsc": "^2.0.29"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
