{
  "name": "@froko/create-vite-ts",
  "version": "8.0.0",
  "description": "A CLI to bootstrap new vite-based TypeScript projects",
  "keywords": [
    "cli",
    "create-vite-ts"
  ],
  "author": "Patrick Ineichen <github@frokonet.ch>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/froko/create-vite-ts.git"
  },
  "license": "MIT",
  "scripts": {
    "lint": "prettier . --check && eslint . --cache",
    "format": "prettier . --write && eslint . --cache --fix",
    "build": "node ./esbuild.mjs",
    "dev": "pnpm build && node dist/index.js",
    "playground": "pnpm build && node playground.mjs",
    "release": "semantic-release"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "bin": {
    "@froko/create-vite-ts": "dist/index.js",
    "create-vite-ts": "dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "channel": "next",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md",
          "changelogTitle": "# Semantic Release Changelog"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist",
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "dependencies": {
    "any-observable": "^0.5.1",
    "colorette": "^2.0.20",
    "ejs": "^3.1.10",
    "execa": "^9.3.0",
    "inquirer": "^10.1.6",
    "listr": "^0.14.3",
    "pkg-install": "^1.0.0",
    "rxjs": "^7.8.1",
    "ts-command-line-args": "^2.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@types/ejs": "^3.1.5",
    "@types/inquirer": "^9.0.7",
    "@types/listr": "^0.14.9",
    "esbuild": "^0.23.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "nx": "^19.5.6",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  },
  "packageManager": "pnpm@9.9.0"
}
